# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_PROJECT=your-project-id
OPENAI_MODEL=gpt-5-mini

# Access Control (Optional)
# Set to 'true' to bypass allowlist checks (development only)
ACCESS_ALLOW_BYPASS=false

# Comma or semicolon separated list of allowed emails
ACCESS_ALLOWLIST=user1@example.com,user2@example.com

# Comma or semicolon separated list of allowed domains
ACCESS_ALLOWED_DOMAINS=example.com,company.com

# Streaming Configuration (Optional)
# Maximum duration for streaming responses in milliseconds
STREAMING_DEADLINE_MS=280000

# Feature Flags (Optional)
PREFS_SUMMARY_ENABLED=false
ALIAS_RESOLUTION_ENABLED=true
NEXT_PUBLIC_PREFS_SUMMARY_ENABLED=false
NEXT_PUBLIC_ALLOW_STREAM_FALLBACK=false
